# Enhanced Semantic Document Search Engine - Environment Configuration
# Copy this file to .env and update with your actual values

# Document settings
DATA_FOLDER=./data
VECTOR_DB_NAME=sentence-transformers/all-MiniLM-L6-v2
VECTOR_TOKEN=your_hugging_face_token_here

# LLM Provider Configuration (choose one primary provider)
LLM_PROVIDER=openai  # Options: openai, claude, gemini, xai
LLM_MODEL=gpt-3.5-turbo
MAX_TOKENS=1000
USE_STREAMING=true

# API Keys (add the ones you plan to use)
# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Google Gemini
GOOGLE_API_KEY=AIyour_google_api_key_here

# xAI (future support)
XAI_API_KEY=xai-your_xai_api_key_here

# Optional: Advanced Configuration
# SEMANTIC_WEIGHT=0.7  # Weight for semantic search (0-1)
# KEYWORD_WEIGHT=0.3   # Weight for keyword search (0-1)
# MAX_CONTEXT_TURNS=10 # Conversation memory turns
# MAX_CONTEXT_LENGTH=6000 # Max context length in characters